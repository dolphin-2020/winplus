<div>
    @using (Html.BeginForm("Search","Home"))
    {
        @Html.ValidationSummary();
        @Html.TextBox("Name")
        <input type="submit" value="Serach Client Informations" />
    }
    <br />
    <a href="@Url.Action("Reguster","Home")">Add New Staff</a>
    <br />
    <a href="@Url.Action("AddClient","Home")">Add Client</a>
    <br />
    <br />
</div>

<div>
    <div style="float:left">
        <h2>My staffs</h2>
        @foreach (var item in Model)
        {
            <a href="@Url.Action("GetStaff","Home", new { id = item.Id})">@item.Name</a>
            <a href="@Url.Action("EditStaff","Home", new { id = item.Id})">Change Staff Informations</a>
            <a href="@Url.Action("DeleteStaff","Home", new { id = item.Id})">Delete Staff</a>
            <br />
        }
    </div>
    <br /><br />

    <div style="float:right">
        <h2>My Clients</h2>
        @foreach (var item in ViewBag.Clients)
        {
            <a href="@Url.Action("ClientInfo", "Home", new { id = item.Id })">@item.Name </a>
          
            <a href="@Url.Action("DeleteClient","Home", new { id = item.Id})">Delete</a>
            <br />
        }
    </div>
</div>

